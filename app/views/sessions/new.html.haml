:ruby
  title t('sessions.log_in.title')

%h1.text-2xl= t('sessions.log_in.title')

= render 'flash_messages'

.grid.md:grid-cols-2
  .break-inside-avoid
    .panel
      = form_tag login_path do
        %label
          = t('sessions.log_in.username')
          = text_field_tag :username, params[:username]

        %label
          = t('sessions.log_in.password')
          = password_field_tag :password

        %label
          = check_box_tag :remember_me, params[:remember_me]
          = t('sessions.log_in.remember_me')

        .text-center= submit_tag 'Log In', class: 'button'

  .break-inside-avoid
    %h3.text-lg.text-center Don't have an account?
    %p.text-center #{link_to 'Click here', :sign_up_start} to sign up.
